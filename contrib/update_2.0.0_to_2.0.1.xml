			<file from="root/umil/*.*" to="umil/*.*"/>
			<file from="root/install.php" to="install.php"/>
		</copy>
		<open src="adm/style/acp_shareon.html">
			<edit>
				<find><![CDATA[		<dl>
			<dt><label for="so_friendfeed">{L_SO_FRIENDFEED}</label></dt>
			<dd><input type="radio" class="radio" name="so_friendfeed" value="1" <!-- IF SO_FRIENDFEED -->checked="checked"<!-- ENDIF -->/> {L_YES} &nbsp;
				<input type="radio" class="radio" name="so_friendfeed" value="0" <!-- IF not SO_FRIENDFEED -->checked="checked"<!-- ENDIF --> /> {L_NO}</dd>
		</dl>]]></find>
				<action type="after-add"><![CDATA[		<dl>
			<dt><label for="so_tumblr">{L_SO_TUMBLR}</label></dt>
			<dd><input type="radio" class="radio" name="so_tumblr" value="1" <!-- IF SO_TUMBLR -->checked="checked"<!-- ENDIF -->/> {L_YES} &nbsp;
				<input type="radio" class="radio" name="so_tumblr" value="0" <!-- IF not SO_TUMBLR -->checked="checked"<!-- ENDIF --> /> {L_NO}</dd>
		</dl>]]></action>
			</edit>
		</open>
		<open src="includes/acp/acp_shareon.php">
			<edit>
				<find><![CDATA[$config['SHAREON_VERSION'] = (isset($config['SHAREON_VERSION'])) ? $config['SHAREON_VERSION'] : '2.0.0';]]></find>
				<action type="replace-with"><![CDATA[$config['SHAREON_VERSION'] = (isset($config['SHAREON_VERSION'])) ? $config['SHAREON_VERSION'] : '2.0.1';]]></action>
			</edit>
			<edit>
				<find><![CDATA[set_config('so_technorati', request_var('so_technorati', 0));]]></find>
				<action type="after-add"><![CDATA[set_config('so_tumblr', request_var('so_tumblr', 0));]]></action>
			</edit>
			<edit>
				<find><![CDATA['SO_TECHNORATI'	=> $config['so_technorati'],]]></find>
				<action type="after-add"><![CDATA['SO_TUMBLR'		=> $config['so_tumblr'],]]></action>
			</edit>
		</open>
		<open src="language/en/mods/info_acp_shareon.php">
			<edit>
				<find><![CDATA['SO_FRIENDFEED'	=> 'FriendFeed',]]></find>
				<action type="after-add"><![CDATA['SO_TUMBLR'		=> 'Tumblr',]]></action>
			</edit>
			<edit>
				<find><![CDATA['SHARE_ON_TECHNORATI'	=> 'Share on Technorati',]]></find>
				<action type="after-add"><![CDATA['SHARE_ON_TUMBLR'		=> 'Share on Tumblr',]]></action>
			</edit>
		</open>
		<open src="styles/prosilver/template/viewtopic_body.html">
			<edit>
				<find><![CDATA[<!-- IF postrow.S_SO_TECHNORATI --><li class="technorati-icon"><a href="{postrow.U_TECHNORATI}" title="{L_SHARE_ON_TECHNORATI}" onclick="window.open(this.href);return false;"><span>{L_SHARE_ON_TECHNORATI}</span></a></li><!-- ENDIF -->]]></find>
				<action type="after-add"><![CDATA[<!-- IF postrow.S_SO_TUMBLR --><li class="tumblr-icon"><a href="{postrow.U_TUMBLR}" title="{L_SHARE_ON_TUMBLR}" onclick="window.open(this.href);return false;"><span>{L_SHARE_ON_TUMBLR}</span></a></li><!-- ENDIF -->]]></action>
			</edit>
			<edit>
				<find><![CDATA[							<td><a href="{postrow.U_TECHNORATI}" onclick="window.open(this.href);return false;">Technorati</a></td>	<!-- ENDIF -->]]></find>
				<action type="after-add"><![CDATA[
							<!-- IF postrow.S_SO_TUMBLR --><td align="center"><a href="{postrow.U_TUMBLR}" onclick="window.open(this.href);return false;" title="{L_SHARE_ON_TUMBLR}"><img src="{T_IMAGESET_LANG_PATH}/share_on_buttons/shareon_tumblr.png" alt="{L_SHARE_ON_TUMBLR}" /></a></td>
							<td><a href="{postrow.U_TUMBLR}" onclick="window.open(this.href);return false;">Tumblr</a></td><!-- ENDIF -->]]></action>
			</edit>
		</open>
		<open src="styles/prosilver/theme/buttons.css">
			<edit>
				<find><![CDATA[.technorati-icon, .technorati-icon a	{ background: none top left no-repeat; }]]></find>
				<action type="after-add"><![CDATA[.tumblr-icon, .tumblr-icon a		{ background: none top left no-repeat; }]]></action>
			</edit>
			<edit>
				<find><![CDATA[ul.profile-icons li.technorati-icon	{ width: 20px; height: 20px; }]]></find>
				<action type="after-add"><![CDATA[ul.profile-icons li.tumblr-icon		{ width: 20px; height: 20px; }]]></action>
			</edit>
		</open>
		<open src="styles/prosilver/theme/colours.css">
			<edit>
				<find><![CDATA[.technorati-icon, .technorati-icon a	{ background-image: url("{T_IMAGESET_LANG_PATH}/share_on_buttons/shareon_technorati.png"); }]]></find>
				<action type="after-add"><![CDATA[.tumblr-icon, .tumblr-icon a		{ background-image: url("{T_IMAGESET_LANG_PATH}/share_on_buttons/shareon_tumblr.png"); }]]></action>
			</edit>
		</open>
		<open src="viewtopic.php">
			<edit>
				<find><![CDATA['U_FRIENDFEED'	=> 'http://friendfeed.com/share?url=' . generate_board_url() . '/viewtopic.php?t='. $topic_data['topic_id'],]]></find>
				<action type="after-add"><![CDATA['U_TUMBLR'	=> 'http://www.tumblr.com/share/link?url=' . urlencode(generate_board_url() . '/viewtopic.php?t='. ($topic_data['topic_id'])) . '&amp;name=' . ($topic_data['topic_title']),]]></action>
			</edit>
			<edit>
				<find><![CDATA['S_SO_TECHNORATI'	=> $config['so_technorati'],]]></find>
				<action type="after-add"><![CDATA['S_SO_TUMBLR'		=> $config['so_tumblr'],]]></action>
			</edit>
		</open>
